<% provide(:title, "Nyheter") %>
<h1>Nyheter</h1>
<div class="row">
	<div class="span10">
		<% if admin_user? %>
			<div class="row">
				<aside class="span10">
					<section>
						<%= render 'shared/micropost_form' %>
					</section>
				</aside>
			</div>
		<% end %>
		<% if @user.microposts.any? %>
			<div class="microposts">
				<%= render @microposts %>
			</div>
		<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>